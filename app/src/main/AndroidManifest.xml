<manifest package="com.mobiledev.tkadima.simpleconverter"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
        </activity>

        <activity android:name=".activities.LengthActivity"
            android:parentActivityName=".activities.MainActivity"
            android:label="@string/title_activity_length">
        </activity>

        <activity android:name=".activities.WeightActivity"
            android:parentActivityName=".activities.MainActivity"
            android:label="@string/title_activity_weight">
        </activity>

        <activity android:name=".activities.CurrencyActivity"
            android:parentActivityName=".activities.MainActivity"
            android:label="@string/title_activity_currency">
        </activity>
        <activity android:name=".activities.NumberActivity"
            android:parentActivityName=".activities.MainActivity"
            android:label="@string/title_activity_number">
        </activity>

    </application>

    <activity
        android:name="com.example.spinner.AndroidSpinnerExampleActivity"
        android:label="@string/app_name">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

</manifest>