<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobiledev.tkadima.simpleconverter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"></activity>

        <activity
            android:name=".activities.LengthActivity"
            android:label="@string/title_activity_length"
            android:parentActivityName=".activities.MainActivity"></activity>

        <activity
            android:name=".activities.WeightActivity"
            android:label="@string/title_activity_weight"
            android:parentActivityName=".activities.MainActivity"></activity>

        <activity
            android:name=".activities.CurrencyActivity"
            android:label="@string/title_activity_currency"
            android:parentActivityName=".activities.MainActivity"></activity>
        <activity
            android:name=".activities.NumberActivity"
            android:label="@string/title_activity_number"
            android:parentActivityName=".activities.MainActivity"></activity>

    </application>

    <activity
        android:name="com.example.spinner.AndroidSpinnerExampleActivity"
        android:label="@string/app_name">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <supports-screens
        android:anyDensity="false"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

</manifest>